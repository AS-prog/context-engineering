{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "{env:OPENCODE_MODEL_REGULAR}",
  "small_model": "{env:OPENCODE_MODEL_LOW}",
  "autoupdate": true,
  "permission": {
    "bash": "ask",
    "edit": "ask",
    "read": "allow"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-e1129563-14f6-4ece-9b1b-3b7de52f1efb"
      },
      "enabled": true
    }
  },
  "watcher": {
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/secrets/**",
      "**/.aws/**",
      "**/.ssh/**",
      "**/config/*.yaml",
      "**/.python-history"
    ]
  },
  "agent": {
    "data-engineer": {
      "mode": "primary",
      "model": "{env:OPENCODE_MODEL_THINKING}",
      "permission": {
        "task": {
          "*": "deny",
          "git-manager": "allow",
          "tdd-architect": "allow",
          "python-coder": "allow",
          "sql-specialist": "allow",
          "code-reviewer": "allow"
        }
      }
    },
    "git-manager": {
      "mode": "subagent",
      "model": "{env:OPENCODE_MODEL_LOW}"
    },
    "tdd-architect": {
      "mode": "subagent",
      "model": "{env:OPENCODE_MODEL_THINKING}"
    },
    "python-coder": {
      "mode": "subagent",
      "model": "{env:OPENCODE_MODEL_REGULAR}"
    },
    "sql-specialist": {
      "mode": "subagent",
      "model": "{env:OPENCODE_MODEL_THINKING}"
    },
    "code-reviewer": {
      "mode": "subagent",
      "model": "{env:OPENCODE_MODEL_REGULAR}"
    }
  },
  "keybinds": {
    "leader": "ctrl+x"
  }
}
