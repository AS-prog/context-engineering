{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "github-copilot/claude-haiku-4.5",
  "autoupdate": true,
  "permission": {
    "bash": "ask",
    "edit": "ask",
    "read": "allow"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  },
  "watcher": {
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/secrets/**",
      "**/.aws/**",
      "**/.ssh/**",
      "**/config/*.yaml",
      "**/.python-history"
    ]
  },
  "agent": {},
  "keybinds": {
    "leader": "ctrl+x"
  }
}
